<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
        <title>Result App</title>
</head>

<body>
    <main class="main">
        <div class="container heading">
            <h1>CGC BCA Batch(2022 - 2025) <span>Result App</span></h1>
            <a href="/">
                <button class="btn">Back</button>
            </a>
            <img src="images/icon.png" alt="">
        </div>
        <div class="container wrapper">
            <div class="student-result">
                <% if(locals.message){ %>
                    <h2 class="<%= message.split(" ").join("-") %>"><%= message %>!
                    </h2>
                    <% } else{ %>
                        <ul class="student-info">
                            <li>Name: <%= result.name %>
                            </li>
                            <li>Father Name: <%= result.fatherName %>
                            </li>
                            <li>Roll Number: <%= rollNo %>
                            </li>
                            <li>Semester: <%= semester %>
                            </li>
                        </ul>
                        <table class="result-table">
                            <thead>
                                <tr>
                                    <th>Subjects (With Code Number)</th>
                                    <th>Grades</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% result.subjects.forEach((subject)=> { %>
                                    <tr>
                                        <td>
                                            <%= Object.keys(subject)[0] %>
                                        </td>
                                        <td>
                                            <%= subject[Object.keys(subject)[0]] %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td>CGPA</td>
                                    <td>
                                        <%= result.cgpa %>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Credits</td>
                                    <td>
                                        <%= result.credits %>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Result Status</td>
                                    <td>
                                        <%= result.resultStatus %>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                        <table class="grade-table">
                            <thead>
                                <tr>
                                    <th>Grade</th>
                                    <th>Qualitative. Meaning</th>
                                    <th>Grade Point</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>O</td>
                                    <td>Outstanding</td>
                                    <td>10</td>
                                </tr>
                                <tr>
                                    <td>A+</td>
                                    <td>Excellent</td>
                                    <td>9</td>
                                </tr>
                                <tr>
                                    <td>A</td>
                                    <td>Very Good</td>
                                    <td>8</td>
                                </tr>
                                <tr>
                                    <td>B+</td>
                                    <td>Good</td>
                                    <td>7</td>
                                </tr>
                                <tr>
                                    <td>B</td>
                                    <td>Above Average</td>
                                    <td>6</td>
                                </tr>
                                <tr>
                                    <td>C</td>
                                    <td>Average</td>
                                    <td>5</td>
                                </tr>
                                <tr>
                                    <td>P</td>
                                    <td>Marginal/Pass</td>
                                    <td>4</td>
                                </tr>
                                <tr>
                                    <td>F</td>
                                    <td>Failed/ReAppear</td>
                                    <td>0</td>
                                </tr>
                                <tr>
                                    <td>Ab</td>
                                    <td>Absent</td>
                                    <td>-</td>
                                </tr>
                                <tr>
                                    <td>E</td>
                                    <td>Detained</td>
                                    <td>0</td>
                                </tr>
                                <tr>
                                    <td>I</td>
                                    <td>Incomplete</td>
                                    <td>-</td>
                                </tr>
                                <tr>
                                    <td>S/UN</td>
                                    <td>Satisfactory/Not-Satifactory</td>
                                    <td>-</td>
                                </tr>
                            </tbody>
                        </table>
                        <% } %>
            </div>
        </div>
    </main>
</body>

</html>